// 정수 num1 - num2 값을 return 하도록 solutio 함수를 만들어 주세요.

class Solution {
    fun solution(num1: Int, num2: Int): Int {
        
        return num1 - num2
    }
}




// 정수 num1, num2가 매개변수로 주어질 때. num1과 num2를 곱한 값을 return 하도록 solution 함수를 완성해주세요.

class Solution {
    fun solution(num1: Int, num2: Int): Int {
       
        return num1 * num2
    }
}




//정수 num1, num2가 매개변수로 주어질 때, num1을 num2로 나눈 몫을 return 하도록 solution 함수를 완성해주세요.

class Solution {
    fun solution(num1: Int, num2: Int): Int {
        
        return num1/num2
    }
}




//정수 num1과 num2가 주어질 때, num1과 num2의 합을 return하도록 soltuion 함수를 완성해주세요.


class Solution {
    fun solution(num1: Int, num2: Int): Int {

        return num1 + num2
        
    }
}



// 정수 num1과 num2가 매개변수로 주어집니다. 두 수가 같으면 1 다르면 -1을 retrun하도록 solution 함수를 완성해주세요

class Solution {
    fun solution(num1: Int, num2: Int): Int {
        var answer: Int = 0

        if(num1 == num2){
            answer = 1
        }else{
            answer = -1
        }

        return answer
    }
}


or 

class Solution {
    fun solution(num1: Int, num2: Int): Int {

        return if(num1 == num2) 1 else -1
    }
}






//정수 num1과 num2가 매개변수로 주어질 때, num1을 num2로 나눈 값에 1,000을 곱한 후 정수 부분을 return 하도록 soltuion 함수를 완성해주세요.


class Solution {
    fun solution(num1: Int, num2: Int): Int {
        var answer: Int = 0
        
        return ((num1.toDouble()/num2.toDouble())*1000).toInt()     //정수를 뽑아내라고 해서 .toInt를 했다고 함
    }
}








// 각도기

//실패 예시(내 답) - if문
class Solution {
    fun solution(angle: Int): Int {
        var answer: Int = 0
        
        if (0< angle < 90){
            answer =1
        } else if (angle ==90){
            answer =2
        } else if (90< angle <180){
            answer = 3
        } else if (angle == 180){
            answer = 4
        }
        
        return answer
    }
}

//성공 예시 1. 

class Solution {
    fun solution(angle: Int): Int {
        if(angle < 90 )
            return 1;
        if(angle == 90)
            return 2;
        if(angle < 180)
            return 3;
        return 4;
    }
}



//성공 예시 2. 
class Solution {
    fun solution(angle: Int): Int {
        var answer: Int = 0

        if(angle > 0 && angle < 90){
            answer = 1
        }else if(angle == 90){
            answer = 2
        }else if(angle > 90 && angle < 180){
            answer = 3
        }else if(angle == 180){
            answer = 4
        }

        return answer
    }
}



//각도기

//성공 예시 - when 문

class Solution {
    fun solution(angle: Int): Int {
        var ans: Int = 0
        when(angle) {
            in 1.. 89 -> ans = 1
            90 -> ans = 2 
            in 91 .. 179 -> ans = 3// return 3
            180 ->  ans =4 //return 4
        }
        
        return ans;        
    }
}






//짝수의 합

class Solution {
    fun solution(n: Int): Int {
        var answer: Int = 0
        
        for(i: Int in 1..n){
            if(i%2==0){                 //2로 나눴을 때 나머지가 0인 것
                answer = answer+i       // answer += i 라고 해도 됨
            }
        }
        
        return answer
    }
}





// 배열의 평균값


//average() 사용 - 컬렉션에 들어있는 숫자 원소들의 평균값을 구하는 함수

class Solution {
    fun solution(numbers: IntArray): Double = numbers.average()
}


//or 


class Solution {
    fun solution(numbers: IntArray): Double {
      return numbers.average()
    }
}


//or

class Solution {
    fun solution(numbers: IntArray): Double {
    var answer: Double = 0.0

    for (i in numbers){
        answer = answer +i
    }

    return answer / numbers.size

    }
}

//or

class Solution {
    fun solution(numbers: IntArray): Double {
    var answer: Double = 0.0
    var sum = 0

    for (i in numbers){
        sum = sum + i
    }

    answer = sum.toDouble()/ numbers.size.toDouble()
    return answer
    }
}
//or 

class Solution {
    fun solution(numbers: IntArray): Double {
        return numbers.sum()/numbers.size.toDouble
    }
}



//짝수와 홀수

class Solution {
    fun solution(num: Int): String {
        return if (num % 2 ==0) "Even" 
        else "Odd"
    }
}


//or

class Solution {
    fun solution(num: Int): String {
        return when(num % 2) {
            0 -> "Even"
            else -> "Odd"
        }
    }
}



//or


class Solution {
  fun solution(num: Int): String {
    return when (num % 2 == 0) {
      true -> "Even"
      else -> "Odd"
    }
  }
}

//or

class Solution {
       fun solution(num: Int): String {
          var answer = ""
          if(num % 2 == 0) answer = "Even" else answer = "Odd"
          return answer
       }
}




// 평균값 구하기


class Solution {
    fun solution(arr: IntArray): Double 
    {
        return arr.average()
    }
}

or


class Solution {
    fun solution(arr: IntArray): Double {
        return arr.sum().toDouble() / arr.size
    }
}


or 

class Solution {
    fun solution(arr: IntArray): Double {
        var answer = 0
        for (i in arr) {
            answer += i
        }
        return answer.toDouble() / arr.size
    }
}

or 

class Solution {
    fun solution(arr: IntArray): Double {
        var answer:Double = 0.0

        for(i in arr) 
            answer += i

        answer /= arr.size
        return answer
    }
}


//약수의 합

class Solution {
    fun solution(n: Int): Int {
        var answer = 0
        for (i in 1..n) {
            if (n % i == 0){
                answer += i
            }
        }
        
        return answer
    }
}

